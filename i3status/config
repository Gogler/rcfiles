general {
        output_format = "i3bar"
        colors = true
        interval = 5
        color_bad = "#dc322f"
        color_good = "#859900"
}

order += "volume master"
order += "date"
order += "tztime local"



tztime local {
            format = "%A:%b:%Y  ⌚  %H:%M"
            align = "center"
            min_width = 150
}

volume master {
            format = "♪: %volume"
            format_muted = "♪: muted (%volume)"
            mixer_idx = 0
}

